      </div>
    </div>
   </div>
    <div class="table_container">
    <h2>Add Game Type:</h2>
    <form method="GET">
      <label for="name">Name:</label>
        <input type="text" id="name"><br>
      <label for="description">Description:</label>
        <input type="text" id="description"><br>
      <input type="submit" value="Add Game Type" id="add_game_type" name="insert" class="buttons">
    </form>
    </div>

    <div class="table_container">
      <table id="table">
        <h2>Game Types:</h2>
          <thead>
            <tr>
              <th>Game ID</th>
              <th>Name</th>
  	          <th>Description</th>
            </tr>
          </thead>
          <tbody id="tableBody">
  	      </tbody>
            {{#each rows}}
            <tr>
              <td>{{game_type_ID}}</td>
              <td>{{name}}</td>
              <td>{{description}}</td>
            </tr>
            {{/each}}
        </table>
    </div>

	

	  <script src="/scripts/game_types.js"></script>
 </body>
</html>
