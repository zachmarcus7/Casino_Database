<!DOCTYPE html>
<html>
 <head>
  <title>Games</title>
 </head>
 <body>
 <div class="main_header">
    <div><header><a href="/" id="head">Gambler Tracker Database</a></header></div>
    <div class="menu">
      <button>Menu</button>
      <div class="menu_links">
              <a href="/">Index</a>
              <a href="/Dealers">Dealers</a>
              <a href="/Tables">Tables</a>
              <a href="/Games">Games</a>
              <a href="/Game_types">Game Types</a>
              <a href="/Supervisors">Supervisors</a>
              <a href="/Qualifications">Qualifications</a>
              <a href="/Game_search">Search Games</a>
              <a href="/edit_game_types">Edit Game Type</a>
              <a href="/Dealer_Search">Search Dealers</a>
              <a href="/Edit_Qualifications">Edit Qualifications</a>
              <a href="/Edit_Dealers">Edit Dealers</a>
              <a href="/Edit_Supervisors">Edit Supervisors</a>
      </div>
    </div>
   </div>
  <div class="table_container">
    <h2>Add Game:</h2>
    <form method="GET">

        <label for="type">Type (Optional):</label>
        <select name="type" id="type">
          {{#each types}}
          <option value="{{id}}">{{name}}</option>
          {{/each}}
          <option value="Null">Unspecified</option>
        </select><br>

        <label for="players_total">Total Players:</label>
        <input type="text" id="players_total"><br>
        <label for="amount_earned">Amount Earned:</label>
        <input type="text" id="amount_earned"><br>
        <label for="date">Date:</label>
        <input type="datetime-local" id="date" min="2020-01-01" max="2020-09-01" step="1"><br>
        <label for="table_id">Table ID:</label>
        <select name="table_id" id="table_id">
          {{#each table_IDs}}
          <option value="{{table_ID}}">{{table_ID}}</option>
          {{/each}}
        </select><br>


        <label for="dealer_id">Dealer:</label>
        <select name="dealer_id" id="dealer_id">
          {{#each dealers}}
          <option value="{{dealer_ID}}">{{dealer_fname}} {{dealer_lname}}</option>
          {{/each}}
        </select><br>


        <input type="submit" value="Add Game" id="addGame" name="insert" class="buttons">
    </form>
  </div>

  <div class="table_container">
    <table id="table">
      <h2>Games:</h2>
        <thead>
          <tr>
            <th>Game ID</th>
            <th>Total Players</th>
            <th>Amount Earned</th>
            <th>Date</th>
            <th>Type</th>
          </tr>
        </thead>
        <tbody id="tableBody">
        </tbody>
          {{#each rows}}
          <tr>
            <td>{{game_ID}}</td>
            <td>{{players_total}}</td>
            <td>{{amount_earned}}</td>
            <td>{{date}}</td>
            <td>{{game_type}}</td>
          </tr>
          {{/each}}
      </table>
  </div>


  <script src="/scripts/games.js"></script>
 </body>
</html>